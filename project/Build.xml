<xml>

<!-- <set name="GCC_THIN_ARCHIVE" value="1"/>-->
<set name="no_thirdparty_extras" value="1"/>
<set name="tool" value="static"/>
<set name="mobile" value="1"/>

<set name="IOS_ARCH" value="-v7" if="HXCPP_ARMV7"/>

<set name="ndll-tool" value="static"/>
<set name="name_extra" value=".iphoneos${IOS_ARCH}" if="iphoneos"/>
<set name="name_extra" value=".iphonesim" if="iphonesim"/><include name="${HXCPP}/build-tool/BuildCommon.xml"/>
<set name="SLIBEXT" value=".a"/>

<files id="iphone">
  <depend name="${HXCPP}/include/hx/CFFI.h"/>
  <compilerflag value="-Iinclude"/>
  <compilerflag value="-IiPhone/include"/>
  <file name="iPhone/NMEFlurryAgent.mm"/>
</files>

<files id="common">
  <compilerflag value="-Iinclude"/>
  <file name="common/ExternalInterface.cpp"/>
</files>

<target id="NDLL" output="libflurryagent${name_extra}" tool="linker" toolid="${ndll-tool}">
  <outdir name="../ndll/${BINDIR}"/>
  <files id="iphone"/>
  <files id="common"/>
</target>

<target id="default">
   <target id="NDLL"/>
</target>


</xml>
